{
  "library_name": "Sietch-Scanner-Definitions",
  "version": "1.0.0",
  "file_signatures": [
    { "id": "ENV-FILE", "name": "Environment Config", "target_files": [".env", ".env.local", ".env.production"], "description": "Contains plain-text secrets.", "risk_level": "High" },
    { "id": "SSH-KEY", "name": "Private Key", "target_files": ["id_rsa", "id_ed25519", "*.pem"], "description": "Private RSA/ED25519 keys.", "risk_level": "Critical" },
    { "id": "TF-STATE", "name": "Terraform State", "target_files": ["*.tfstate"], "description": "Infrastructure state with plain-text secrets.", "risk_level": "High" },
    { "id": "K8S-CONFIG", "name": "Kubeconfig", "target_files": ["kubeconfig", "config"], "description": "Cluster access credentials.", "risk_level": "Critical" },
    { "id": "DBC-FILE", "name": "CAN Database", "target_files": ["*.dbc"], "description": "Automotive network mapping file.", "risk_level": "Info" },
    { "id": "PLC-PROJ", "name": "PLC Project", "target_files": ["*.pma", "*.hmi", "*.tia"], "description": "Industrial control logic.", "risk_level": "Info" },
    { "id": "SQL-DUMP", "name": "Database Dump", "target_files": ["*.sql", "*.dump", "*.bak"], "description": "Database backups in repo.", "risk_level": "High" },
    { "id": "BASH-HIST", "name": "Bash History", "target_files": [".bash_history", ".zsh_history"], "description": "Command history leak.", "risk_level": "Medium" },
    { "id": "GIT-CRED", "name": "Git Credentials", "target_files": [".git-credentials"], "description": "Stored git auth.", "risk_level": "Critical" },
    { "id": "WP-CONF", "name": "WordPress Config", "target_files": ["wp-config.php"], "description": "DB credentials for WordPress.", "risk_level": "Critical" },
    { "id": "POSTMAN-ENV", "name": "Postman Environment", "target_files": ["*.postman_environment.json"], "description": "API keys in Postman vars.", "risk_level": "High" },
    { "id": "NETRC", "name": "Netrc File", "target_files": [".netrc"], "description": "Auto-login credentials.", "risk_level": "High" },
    { "id": "DOCKER-SOCK", "name": "Docker Socket", "target_files": ["docker.sock"], "description": "Container breakout risk.", "risk_level": "High" },
    { "id": "DNP3-CFG", "name": "DNP3 Config", "target_files": ["*.dnp"], "description": "OT Protocol configuration.", "risk_level": "Medium" },
    { "id": "GCP-SA-JSON", "name": "GCP Service Account", "target_files": ["*.json"], "pattern": "\"type\": \"service_account\"", "description": "GCP credentials.", "risk_level": "Critical" }
  ],
  "vulnerability_patterns": [
    { "id": "AWS-KEY", "name": "AWS Access Key", "pattern": "AKIA[0-9A-Z]{16}", "description": "Hardcoded AWS Key.", "risk_level": "Critical" },
    { "id": "AWS-SEC", "name": "AWS Secret Key", "pattern": "(?i)aws(.{0,20})?['\"][0-9a-zA-Z\\/+]{40}['\"]", "description": "AWS Secret.", "risk_level": "Critical" },
    { "id": "GCP-API", "name": "GCP API Key", "pattern": "AIza[0-9A-Za-z\\-_]{35}", "description": "GCP Key.", "risk_level": "Critical" },
    { "id": "SLACK-WEB", "name": "Slack Webhook", "pattern": "https:\\/\\/hooks\\.slack\\.com\\/services\\/T[A-Z0-9]+\\/B[A-Z0-9]+\\/[A-Z0-9]+", "description": "Inbound webhook.", "risk_level": "High" },
    { "id": "STRIPE-KEY", "name": "Stripe Key", "pattern": "sk_live_[0-9a-zA-Z]{24}", "description": "Live Stripe secret.", "risk_level": "Critical" },
    { "id": "GH-PAT", "name": "GitHub Token", "pattern": "ghp_[a-zA-Z0-9]{36}", "description": "Personal Access Token.", "risk_level": "Critical" },
    { "id": "JWT-SEC", "name": "JWT Secret", "pattern": "JWT_SECRET|SECRET_KEY\\s*[:=]\\s*['\"][^'\"]+['\"]", "description": "Symmetric JWT secret.", "risk_level": "High" },
    { "id": "PY-SUB-SHELL", "name": "Py Subprocess Shell", "pattern": "subprocess\\.(run|call|Popen)\\(.*shell\\s*=\\s*True.*\\)", "description": "Command injection risk.", "risk_level": "High" },
    { "id": "JS-EVAL", "name": "JS Eval", "pattern": "eval\\s*\\(", "description": "Arbitrary code execution.", "risk_level": "High" },
    { "id": "SQL-CONCAT", "name": "SQL String Concat", "pattern": "SELECT.*FROM.*\\+.*|f\"SELECT.*FROM.*{.*}\"", "description": "SQL Injection risk.", "risk_level": "High" },
    { "id": "DJANGO-DEBUG", "name": "Django Debug", "pattern": "DEBUG\\s*=\\s*True", "description": "Debug mode enabled.", "risk_level": "High" },
    { "id": "FLASK-DEBUG", "name": "Flask Debug", "pattern": "app\\.run\\(.*debug\\s*=\\s*True.*\\)", "description": "Debug mode enabled.", "risk_level": "High" },
    { "id": "CORS-ALL", "name": "Permissive CORS", "pattern": "Access-Control-Allow-Origin:\\s*\\*", "description": "Cross-origin risk.", "risk_level": "Medium" },
    { "id": "JWT-NONE", "name": "JWT None Alg", "pattern": "\"alg\":\\s*\"none\"", "description": "Auth bypass.", "risk_level": "Critical" },
    { "id": "ARDUINO-PASS", "name": "Hardcoded WiFi", "pattern": "(STASSID|STAPSK|WIFI_PASS)\\s+\".*\"", "description": "IoT credential leak.", "risk_level": "High" },
    { "id": "CAN-RAW-SEND", "name": "Raw CAN Write", "pattern": "can\\.send\\(|socketcan\\.write\\(", "description": "Unsafe automotive bus write.", "risk_level": "High" },
    { "id": "MODBUS-WRITE", "name": "Modbus Write", "pattern": "write_multiple_registers|write_coil", "description": "Industrial control command.", "risk_level": "Medium" },
    { "id": "S7-COMM", "name": "S7 PLC Comm", "pattern": "snap7\\.client|s7comm", "description": "Siemens PLC comms.", "risk_level": "Info" },
    { "id": "UDS-UNLOCK", "name": "UDS Security Access", "pattern": "0x27\\s*0x0[1-5]", "description": "Automotive ECU unlock.", "risk_level": "Medium" },
    { "id": "BASH-EVAL", "name": "Bash Eval", "pattern": "eval\\s+\".*\\$.*\"", "description": "Shell injection.", "risk_level": "High" },
    { "id": "CURL-BASH", "name": "Pipe to Bash", "pattern": "curl.*\\|.*bash", "description": "Unsafe remote execution.", "risk_level": "High" },
    { "id": "CHMOD-777", "name": "Permissive Chmod", "pattern": "chmod\\s+777", "description": "Over-permissive files.", "risk_level": "Medium" },
    { "id": "MD5-HASH", "name": "Weak Hash MD5", "pattern": "hashlib\\.md5\\(|MD5\\(", "description": "Cryptographic weakness.", "risk_level": "Low" },
    { "id": "SSL-NO-VERIFY", "name": "SSL Verify Disabled", "pattern": "verify=False|NODE_TLS_REJECT_UNAUTHORIZED=0", "description": "MITM risk.", "risk_level": "High" },
    { "id": "SUDO-NOPASS", "name": "Sudo No Password", "pattern": "ALL=\\(ALL\\)\\s+NOPASSWD", "description": "Privilege escalation.", "risk_level": "High" },
    { "id": "NPM-REG", "name": "Custom NPM Registry", "pattern": "registry=https:\\/\\/((?!registry\\.npmjs\\.org).)*", "description": "Dependency confusion risk.", "risk_level": "Medium" },
    { "id": "SENDGRID-API", "name": "SendGrid Key", "pattern": "SG\\.[a-zA-Z0-9_-]{22}\\.[a-zA-Z0-9_-]{43}", "description": "Email hijacking.", "risk_level": "High" },
    { "id": "TWILIO-SID", "name": "Twilio SID", "pattern": "AC[0-9a-f]{32}", "description": "SMS service access.", "risk_level": "Medium" },
    { "id": "VAULT-TOKEN", "name": "Hashicorp Vault Token", "pattern": "X-Vault-Token", "description": "Secret manager access.", "risk_level": "Critical" },
    { "id": "DOCKER-RUN-PRIV", "name": "Privileged Docker", "pattern": "docker run --privileged", "description": "Host compromise risk.", "risk_level": "High" },
    { "id": "SSH-PEM-HEADER", "name": "PEM Header", "pattern": "-----BEGIN RSA PRIVATE KEY-----", "description": "Hardcoded key block.", "risk_level": "Critical" },
    { "id": "PY-PICKLE", "name": "Python Pickle Load", "pattern": "pickle\\.load\\(", "description": "Deserialization RCE.", "risk_level": "High" },
    { "id": "PHP-SYSTEM", "name": "PHP System Call", "pattern": "shell_exec\\(|system\\(|passthru\\(", "description": "RCE risk.", "risk_level": "High" },
    { "id": "CRYPTO-FIXED-IV", "name": "Hardcoded IV", "pattern": "iv\\s*=\\s*['\"][a-f0-9]{16,32}['\"]", "description": "Weak encryption.", "risk_level": "Medium" },
    { "id": "GCP-CLIENT-ID", "name": "GCP Client ID", "pattern": "[0-9]+-[a-z0-9_]+\\.apps\\.googleusercontent\\.com", "description": "OAuth exposure.", "risk_level": "Medium" },
    { "id": "AZURE-CLIENT-SEC", "name": "Azure Client Secret", "pattern": "[a-zA-Z0-9~._-]{34}", "description": "Azure AD secret.", "risk_level": "Critical" },
    { "id": "BITBUCKET-APP-PASS", "name": "Bitbucket App Pass", "pattern": "BITBUCKET_APP_PASSWORD", "description": "Repo access.", "risk_level": "Critical" },
    { "id": "CIRCLECI-TOKEN", "name": "CircleCI Token", "pattern": "CIRCLE_TOKEN", "description": "CI/CD access.", "risk_level": "Critical" },
    { "id": "DATADOG-API", "name": "Datadog API", "pattern": "DD_API_KEY", "description": "Monitoring access.", "risk_level": "High" },
    { "id": "MAILGUN-KEY", "name": "Mailgun Key", "pattern": "key-[0-9a-zA-Z]{32}", "description": "Email access.", "risk_level": "High" },
    { "id": "NEWRELIC-KEY", "name": "New Relic Key", "pattern": "NRAL-[a-z0-9]{32}", "description": "Monitoring access.", "risk_level": "High" },
    { "id": "FIREBASE-API", "name": "Firebase API", "pattern": "apiKey:\\s*\".*\"", "description": "Firebase key.", "risk_level": "Medium" },
    { "id": "COUCHDB-ADMIN", "name": "CouchDB Admin", "pattern": "_admin:.*", "description": "DB privilege leak.", "risk_level": "High" },
    { "id": "MQTT-ANON", "name": "MQTT Anon", "pattern": "client\\.connect\\(\".*\",\\s*NULL,\\s*NULL\\)", "description": "IoT bus access.", "risk_level": "High" },
    { "id": "OTA-PLAIN", "name": "IoT Plaintext OTA", "pattern": "ArduinoOTA\\.begin\\(\\)", "description": "No auth for updates.", "risk_level": "High" },
    { "id": "UART-DEBUG-LOG", "name": "UART Debugging", "pattern": "Serial\\.begin\\(", "description": "Hardware console leak.", "risk_level": "Info" },
    { "id": "SECURE-BOOT-OFF", "name": "Secure Boot Disabled", "pattern": "CONFIG_SECURE_BOOT_ENABLED=n", "description": "Physical tampering risk.", "risk_level": "High" },
    { "id": "JTAG-ENABLED", "name": "JTAG Config", "pattern": "CONFIG_ESP32_JTAG_SUPPORT", "description": "Debugging port open.", "risk_level": "Low" },
    { "id": "S3-ACL-PUB", "name": "S3 Public ACL", "pattern": "PublicRead|PublicReadWrite", "description": "Bucket data leak.", "risk_level": "High" }
  ],

  "dependency_files": [
  {
    "id": "PY-PROJECT",
    "name": "Python Project Config",
    "patterns": ["pyproject.toml", "requirements.txt"],
    "scope": "root_or_subdir",
    "purpose": "Dependency & build configuration",
    "risk_level": "Info"
  },
  {
    "id": "NODE-PROJECT",
    "name": "Node.js Project Config",
    "patterns": ["package.json"],
    "scope": "root_or_subdir",
    "purpose": "Dependency & script configuration",
    "risk_level": "Info"
  },
  {
    "id": "DOCKER-BUILD",
    "name": "Docker Build File",
    "patterns": ["Dockerfile"],
    "scope": "any",
    "risk_level": "Medium"
  },
  {
    "id": "CI-WORKFLOW",
    "name": "CI/CD Workflow",
    "patterns": [".github/workflows/*.yml", ".github/workflows/*.yaml"],
    "risk_level": "High"
  }
]

}